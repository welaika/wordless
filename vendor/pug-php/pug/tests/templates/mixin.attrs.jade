mixin centered(title)
  div.centered(id=attributes.id)
    - if (title)
      h1(class=attributes.class)= title
    block
    - if (attributes.href)
      .footer
        a(href=attributes.href) Back

mixin main(title)
  div.stretch
    +centered(title).highlight&attributes(attributes)
      block

mixin image(src, width)
  img(src=src, width=width)

mixin bottom
  div.bottom&attributes(attributes)
    block

mixin field(value, options)
  input(type='radio' checked=attributes.prefilled value=value)&attributes(options)

mixin classy
  a.b.c(class=["d", "e"])&attributes(attributes)&attributes(array('class' => 'j', 'id' => "a"))

body
  +centered#First Hello World
  +centered('Section 1')#Second
    p Some important content.
  +centered('Section 2')#Third.foo(href='menu.html', class='bar')
    p Even more important content.
  +main('Section 3\' and quote""')(href='#')
    p Last content.
  +bottom.foo(class='bar', name='end', id='Last', data-attr='baz')
    p Some final words.
  +image('foo.png', 400)
  - width = 500
  +image('foo.png', width)
  +field(0)(prefilled=0, name="bar")
  +field('')(prefilled='', title=null)
  +field(false)(prefilled=false, title="foo")
  +field(null)(prefilled=null)
  +field(null)
  +field(0, foo='bar')(prefilled=0, name="bar")
  +field('', foo='bar', bar=45)(prefilled='', title=null)
  +field(false, 32)(prefilled=false, title="foo")
  +field(null, a=false, b=null, c=0)(prefilled=null)
  +field(null, a=false, b=null, c=0)
  +classy().g(class=['h', 'i']).f
