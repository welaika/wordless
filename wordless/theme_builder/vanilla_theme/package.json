{
  "name": "wordless",
  "version": "3.0.0",
  "description": "Wordless asset compiler",
  "main": "index.js",
  "repository": "git@github.com:welaika/wordless.git",
  "author": "'weLaika' <info@welaika.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "12.13.1"
  },
  "scripts": {
    "server": "npx nf start",
    "build:dev": "webpack --debug --env.NODE_ENV=development",
    "build:prod": "yarn sign-release && webpack -p --bail --env.NODE_ENV=production",
    "clean:js": "rimraf dist/javascripts/*",
    "clean:css": "rimraf dist/stylesheets/*",
    "clean:images": "rimraf dist/images/*",
    "clean:dist": "yarn clean:js && yarn clean:css && yarn clean:images",
    "sign-release": "git rev-parse HEAD | cut -c 1-8 > release.txt",
    "lint": "yarn lint:sass",
    "lint:sass": "npx stylelint 'src/stylesheets/**/*.scss'",
    "test:db:create": "WP_ENV=test wp db create",
    "test:db:snapshot": "wp db export tests/_data/dump.sql",
    "test:setup": "wp wordless theme setup_test_suite && composer install && yarn test:db:create && php ./vendor/bin/codecept build",
    "test:server": "npx nf start --procfile Procfile.testing --env .env.testing",
    "test": "vendor/bin/codecept run acceptance",
    "setup": "yarn install && yarn test:setup"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "babel-loader": "^8.0.6",
    "browser-sync": "^2.26.7",
    "browser-sync-webpack-plugin": "^2.2.2",
    "copy-webpack-plugin": "^5.1.1",
    "core-js": "^3.6.4",
    "css-loader": "^3.4.2",
    "file-loader": "^5.1.0",
    "foreman": "^3.0.1",
    "image-webpack-loader": "^6.0.0",
    "imagemin-webpack-plugin": "^2.4.2",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.1",
    "rimraf": "^3.0.2",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "stylelint": "^13.2.1",
    "stylelint-config-strict-scss": "^0.5.0",
    "stylelint-order": "^4.0.0",
    "url-loader": "^3.0.0",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11"
  },
  "peerDependencies": {}
}
